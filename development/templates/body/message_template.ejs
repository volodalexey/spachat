<% var _in = arguments[0]; %>
<div class="flex-sp-around margin-t-b">
    <%if (_in.messageConstructor.amICreator(_in.message)) {%>
        <div class="message myMessage flex-item-1-auto flex-dir-col flex-sp-between">
            <div><%= _in.message.innerHTML %></div>
            <div class="dateFormat">
                <%if (_in.message.createdDatetime) { %>
                <% var time = new Date(_in.message.createdDatetime);%>
                <%= time.toISOString()%>
                <%}%>
            </div>
        </div>
    <div class="width-40px flex-just-center"><img src="img\app\6.ico" width="35px" height="35px" class="border-radius-5"></div>
    <%} else {%>
        <div class="width-40px flex-just-center"><img src="img\app\3.ico" width="35px" height="35px" class="border-radius-5"></div>
        <div class="message flex-item-1-auto flex-dir-col flex-sp-between">
            <div><%= _in.message.innerHTML %></div>
            <div class="dateFormat">
                <%if (_in.message.createdDatetime) { %>
                <% var time = new Date(_in.message.createdDatetime);%>
                <%= time.toISOString()%>
                <%}%>
            </div>
            <div class="dateFormat">
                <%if (_in.message.receivedDatetime) { %>
                <% var time = new Date(_in.message.receivedDatetime);%>
                <%= time.toISOString()%>
                <%}%>
            </div>
        </div>
    <%}%>
</div>
