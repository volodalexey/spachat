<% var _in = arguments[0]; %>
<div class="flex-sp-around">
    <div class="fotoFormat">
        <%if (_in.message.ids[_in.message.id].sender) {%>
         <img src="img\app\6.ico" width="35px" height="35px"></div>
        <%} else {%>
            <img src="img\app\3.ico" width="35px" height="35px"></div>
        <%}%>


    <%if (_in.message.ids[_in.message.id].sender) {%>
        <div class="message myMessage flex-item-1-auto flex-dir-col flex-sp-between">
            <div><%= _in.message.innerHTML %></div>
                <div class="dateFormat">
                    <%if (_in.message.ids[_in.message.id].dateTime) { %>
                    <% var time = new Date(_in.message.ids[_in.message.id].dateTime);%>
                    <%= time.toISOString()%>
                    <%}%>
                </div>
        </div>
    <%} else {%>
        <div class="message flex-item-1-auto flex-dir-col flex-sp-between">
            <div><%= _in.message.innerHTML %></div>
            <div class="dateFormat">
                <%if (_in.message.ids[_in.message.id].dateTime) { %>
                <% var time = new Date(_in.message.ids[_in.message.id].dateTime);%>
                <%= time.toISOString()%>
                <%}%>
            </div>
        </div>
    <%}%>

</div>
