<div class="flex-sp-start margin-t-b">
    <%if (_in.messageConstructor.amICreator(_in.message)) {%>
        <div class="message myMessage flex-item-1-auto flex-dir-col flex-sp-between">
            <div class="message-container"><%= _in.message.innerHTML %></div>
            <div class="date-format">
                <%if (_in.message.createdDatetime) { %>
                <% var time = new Date(_in.message.createdDatetime);%>
                <%= time.toISOString()%>
                <%}%>
            </div>
        </div>
    <div class="width-40px flex-just-center flex-dir-col">
        <img src="img\app\6.ico" width="35px" height="35px" class="border-radius-5 flex-item-auto">
        <div class="user-info flex-item-1-auto c-01"><%= _in.message.createdByUserId %></div>
    </div>
    <%} else {%>
        <div class="width-40px flex-just-center flex-dir-col">
            <img src="img\app\3.ico" width="35px" height="35px" class="border-radius-5 flex-item-auto">
            <div class="user-info c-50"><%= _in.message.createdByUserId %></div>
        </div>
        <div class="message flex-item-1-auto flex-dir-col flex-sp-between">
            <div class="message-container"><%= _in.message.innerHTML %></div>
            <div class="date-format">
                <%if (_in.message.createdDatetime) { %>
                <% var time = new Date(_in.message.createdDatetime);%>
                <%= time.toISOString()%>
                <%}%>
            </div>
            <div class="date-format">
                <%if (_in.message.receivedDatetime) { %>
                <% var time = new Date(_in.message.receivedDatetime);%>
                <%= time.toISOString()%>
                <%}%>
            </div>
        </div>
    <%}%>
</div>
